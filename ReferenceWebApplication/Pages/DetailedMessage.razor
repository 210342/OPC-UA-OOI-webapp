@page "/detailed-message"
@using M2MCommunication
@using MessageParsing

<div class="container-fluid" >
    @if (!IsLayoutHorizontal)
    {
        <div class="row my-1">
            <div class="col-4 text-center py-2">
                <h3><span class="badge badge-primary">Packages received: @PackagesReceived</span></h3>
            </div>
            <div class="col-4 text-center py-2">
                <h3><span class="badge @bytesReceivedStyle">Bytes received: @BytesReceived</span></h3>
            </div>
            <div class="col-4 text-center py-2">
                <button class="btn btn-danger" @onclick="GenerateMessage">
                    Generate message
                </button>
            </div>
        </div>
    }
    <div class="row my-3 no-gutters">
        <div class="@imageColumnClass">
            <ReferenceWebApplication.Components.ImageMessageParser Parser="Parser" />
        </div>
        @if (IsLayoutHorizontal)
        {
            <div class="col-3">
                <div class="row my-2">
                    <div class="col-12">
                        <div class="text-center">
                            <h3><span class="badge badge-primary">Packages received: @PackagesReceived</span></h3>
                        </div>
                    </div>
                </div>
                <div class="row my-2">
                    <div class="col-12">
                        <div class="text-center">
                            <h3><span class="badge @bytesReceivedStyle">Bytes received: @BytesReceived</span></h3>
                        </div>
                    </div>
                </div>
                <div class="row my-6">
                    <div class="col-12">
                        <div class="text-center">
                            <button class="btn btn-lg btn-danger" @onclick="GenerateMessage">
                                Generate message
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="row my-3">
        <div class="col-12">
            <h2 class="mt-6 mb-3">Other properties</h2>
            <ReferenceWebApplication.Components.TextMessageParser Parser="Parser" />
        </div>
    </div>
</div>

@inject IMessageBus Bus
@inject IMessageReceiver Receiver
@inject IMessageParser Parser
@code 
{
    private string bytesReceivedStyle => BytesReceived > 2048 ? "badge-warning" : "badge-info";
    private string imageColumnClass => IsLayoutHorizontal ? "col-9" : "col-12";

    public int BytesReceived { get; private set; } = 0;
    public int PackagesReceived { get; private set; } = 0;
    public bool IsLayoutHorizontal { get; set; } = false;

    protected override void OnInitialized()
    {
        Receiver.MessageBus = Bus;
        Receiver.Subscribe(
            new Subscription(M2MCommunication.Message.StaticTypeGuid),
            message => { Parser.Parse(message); UpdateMessage(null, message); }
        );
    }

    public void UpdateMessage(object updatedObject, IMessage message)
    {
        ++PackagesReceived;
        BytesReceived += message.Size;
    }

    public void GenerateMessage()
    {
        Bus.SendMessage(new Message());
    }
}