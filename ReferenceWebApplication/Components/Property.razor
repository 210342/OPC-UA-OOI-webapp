@using System.Drawing
@using System.Text
@using MessageParsing

<span class="printable-property" style="@Style">
    @DrawableProperty.Value.ToString()
</span>

@code
{
    [Parameter]
    public DrawableProperty DrawableProperty { get; set; }
    private string Style => DrawableProperty is null
        ? string.Empty
        : new StringBuilder()
            .Append("position: absolute;")
            .Append("left: ").Append(Decimal.Round(DrawableProperty.XPosition.Value)).Append("px;")
            .Append("top: ").Append(Decimal.Round(DrawableProperty.YPosition.Value)).Append("px;")
            .Append("background-color: ").Append(ColorTranslator.ToHtml(DrawableProperty.BackgroundColor.Value)).Append(";")
            .Append("color: ").Append(ColorTranslator.ToHtml(DrawableProperty.FontColor.Value)).Append(";")
            .ToString();
}
